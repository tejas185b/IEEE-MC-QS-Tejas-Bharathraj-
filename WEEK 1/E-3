class Solution {
    public int[] twoSum(int[] nums, int target) {
        int a[]=new int[2];
        a[0] = a[1] = -1;
        HashMap<Integer,Integer> map=new HashMap<>();
        for(int i=0;i<nums.length;i++)
        {
            int n=nums[i];
            int req=target-n;
            if(map.containsKey(req))
            {
                a[0]=map.get(req);
                a[1]=i;
                return a;
            }
            map.put(nums[i],i);
        }
        return a;
    }
}
